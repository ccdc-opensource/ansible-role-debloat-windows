{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ansible-lint",
            "type": "shell",
            "command": "docker run -it --rm -v ${PWD}:/workspace quay.io/ansible/creator-ee:v0.4.1 /usr/local/bin/ansible-lint -vvv /workspace",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "yamllint",
            "type": "shell",
            "command": "docker run -it --rm -v ${PWD}:/code pipelinecomponents/yamllint:0.20.2 yamllint .",
            "problemMatcher": {
                "owner": "yaml",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                      "regexp": "^([^\\s].*)$",
                      "file": 1
                    },
                    {
                      "regexp": "^\\s+(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)\\s\\s+(.*)$",
                      "line": 1,
                      "column": 2,
                      "severity": 3,
                      "message": 4,
                      "code": 5,
                      "loop": true
                    }
                  ]
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "markdownlint",
            "type": "shell",
            "command": "docker run -it --rm -v ${PWD}:/workdir ghcr.io/igorshubovych/markdownlint-cli:latest /workdir",
            "problemMatcher": {
                "owner": "markdown",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                      "regexp": "^/workdir/(.*):(\\d+):(\\d+)\\s+(MD\\d+.*?)\\s+(.*)$",
                      "file": 1,
                      "line": 2,
                      "column": 3,
                      "code": 4,
                      "message": 5
                    }
                  ]
            },
            "group": {
                "kind": "build"
            }
        }
    ]
}
